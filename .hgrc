# vim: set filetype=cfg
[ui]
username = Александр Ульяницкий <aulyanitsky@gmail.com>

[trusted]
[merge-tool]
kdiff3.gui = True
kdiff3.args = $base $local $other -o $output
kdiff3.priority = 1

[extensions]
convert = 
graphlog =
color =
extdiff =
convert = 
qct =
hgview =
progress =

[qct]
path= /usr/bin/qct

[extdiff]
cmd.kdiff = kompare
cmd.vimdiff = vimdiff

[web]
style = gitweb

[progress]
delay = 3 
refresh = 0.1
format = topic bar number
width = 1 
clear-complete = True
disable = False
assume-tty = False
